<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="Theme.Light.Thorfun" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Widget.Thorfun.ActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="Widget.Thorfun.ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TextAppearance.Thorfun.Widget.ActionBar.Title</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

</resources>